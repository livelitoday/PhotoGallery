<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/myActionBarStyle</item>
        <item name="android:titleTextStyle">@style/actionbar_Style</item>

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="myActionBarStyle" parent="android:Widget.ActionBar">
        <item name="android:background">#f5f5f3</item>


    </style>

    <style name="actionbar_Style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#0485ff</item>
    </style>
</resources>
